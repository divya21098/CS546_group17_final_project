<main>
    <div class="outer-card">
        <div class="saved-posts">
            <form method="post" action="/users/myProfile/savedPosts/{{posts._id}}">
                <button type="submit">Save Post</button>
            </form>
        </div>
        <div class="post-details">
            <h2>{{posts.postTitle}}</h2>
            <p>{{posts.userId}}</p>
            <p>{{posts.postDate}}</p>

            <p>Preferences :</p>
            {{#each posts.preference}}
            {{@key}} : {{this}} <br>
            {{/each}}

            <p>Apartment Details :</p>
            <p>{{posts.postBody}}</p>

            <p>Photos :</p>
            <img src="/posts/postpic/{{posts._id}}" alt="Apartment Photo" class="aptPhoto" />
        </div>

        <div id="gmap" style="height:400px; width:100%;"></div>

        <div class="postcomments">
            <p>Enter a comment</p>
            <div>
                <form id="comments-form" method="POST" action="/comments/{{posts._id}}">
                    <label class="commentText" for="commentText">comment text :</label>
                    <input type="text" id="commentText" name="commentText" />
                    <button type="submit">Create</button>
                </form>

            </div>
            <p>Comment list</p>
            <div class="comment-area">
                {{#each posts.comments}}
                {{@key}} : {{this.userId}}<br>
                {{this.commentText}}<br>
                {{/each}}
            </div>
        </div>
    </div>

    <script src="/public/js/maps.js" latitude={{posts.latitude}} longitude={{posts.longitude}}></script>

</main>