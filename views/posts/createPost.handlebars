<main>
    <div class="container-post">
        <div class="block-posts">
            <form id="posts-form" method="POST" action="/createPost">
            <!-- Input to add Post Title -->
            <label class="postTitle" for="postTitle">Post Title :</label>
            <input type="text" id="postTitle" name="postTitle"/>
            <!-- Input to add price -->
            <label class="aptPrice" for="aptPrice">Price :</label>
            <input type="text" id="aptPrice" name="aptPrice"/>
            <!-- Input to add location dropdown -->

            <label class="postBody" for="postBody" name="postBody">Apartment Details :</label>
            <textarea id="postBody" name="postBody" rows="10" cols="30"></textarea>

            <!-- Input to add photos -->
            <label class="aptPhotos" for="aptPhotos">Post Title :</label>
            <input type="file" id="aptPhotos" name="aptPhotos"/>

            <!-- Create Post Button-->
            <button type="submit">Create</button>
            </form>
        </div>
    </div>
</main>