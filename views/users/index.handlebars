<main>
    <div class="container user-details-card">
        <div class="card mt-2 mb-2">
            <div class="row">
                <div class="col-sm">
                    <img src="https://cdn4.iconfinder.com/data/icons/small-n-flat/24/user-512.png" style="width: 150px;"
                        alt="Avatar" />
                </div>
                <div class="col-sm ml-3 mt-3 mb-3">
                    <p>{{userInfo.firstName}} {{userInfo.lastName}}</p>
                    <p>{{userInfo.emailId}}</p>
                    <p>{{userInfo.age}}</p>
                    <p>{{userInfo.gender}}</p>
                    <p>{{userInfo.aboutMe}}</p>
                    <p>{{userInfo.nationality}}</p>
                    <p>Preferences - </p>

                    {{#each userInfo.preference}}
                    <p class="fit-contents-p textIndent">
                        {{@key}} : {{this}} <br>
                    </p>
                    {{/each}}
                </div>

                <form method="get" action="/users/myProfileEdit">
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg" id="editUser">Edit User</button>
                </div>
                </form>

            </div>

        </div>

        <div class="userPostDisplay">
            <button id="allUserPostsButton">Your Posts</button>
            <button id="allUserSavedPostsButton">Your Saved Posts</button>
            <div class="your-posts" id="yourPosts" style="display: none;">
                {{#each userInfo.postId}}
                <a href="http://localhost:3000/posts/{{this}}">{{this}} </a><br>

                <form method="post" action="/posts/delete/{{this}}">
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg" id="deletePosts">Delete</button>
                </div>
                </form>
                <form method="get" action="/posts/edit/{{this}}">
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg" id="editPost">Edit</button>
                </div>
                </form>
                {{/each}}
            </div>
            <div class="your-saved-posts" id="yourSavedPosts" style="display: none;">
                {{#each userInfo.savedPost}}
                <a href="http://localhost:3000/posts/{{this}}">
                    {{this}} </a>
                {{/each}}
            </div>
        </div>



    </div>
